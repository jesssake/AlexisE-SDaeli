.manual {
  padding: 2rem;
  max-width: 1200px;
  margin: 0 auto;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

// Header
.header {
  margin-bottom: 1.5rem;

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 700;
    color: #2c3e50;
    margin: 0;
    background: linear-gradient(135deg, #667eea, #764ba2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .header-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
}

.page-subtitle {
  font-size: 1.1rem;
  color: #7f8c8d;
  margin-bottom: 2rem;
  text-align: center;
}

// Botones
.btn-primary, .btn-secondary {
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  transition: all 0.3s ease;

  &:hover {
    transform: translateY(-2px);
  }
}

.btn-primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);

  &:hover {
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
  }
}

.btn-secondary {
  background: #6c757d;
  color: white;

  &:hover {
    background: #5a6268;
  }
}

// NavegaciÃ³n rÃ¡pida
.navegacion-rapida {
  margin-bottom: 2rem;
}

.navegacion-card {
  background: white;
  border-radius: 16px;
  padding: 2rem;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  border: 1px solid #f1f3f4;
}

.navegacion-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 1.5rem;
  text-align: center;
}

.navegacion-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.navegacion-btn {
  border: 2px solid #e9ecef;
  background: white;
  padding: 1.5rem 1rem;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.75rem;
  text-align: center;

  &:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    border-color: #667eea;
  }

  &.activo {
    border-color: #667eea;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  }

  .navegacion-icono {
    font-size: 2rem;
  }

  .navegacion-texto {
    font-size: 1rem;
    font-weight: 600;
    color: #2c3e50;
  }
}

// Contenido del manual
.contenido-manual {
  margin-bottom: 3rem;
}

// SecciÃ³n activa (solo para pantalla)
.seccion-activa {
  background: white;
  border-radius: 16px;
  padding: 2rem;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  border: 1px solid #f1f3f4;
  margin-bottom: 2rem;

  @media print {
    display: none;
  }
}

.seccion-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid #f1f3f4;
}

.seccion-titulo {
  display: flex;
  align-items: center;
  gap: 1rem;

  .seccion-icono {
    font-size: 2.5rem;
  }

  h2 {
    margin: 0;
    color: #2c3e50;
    font-size: 1.8rem;
  }
}

.seccion-meta {
  .seccion-id {
    background: #f8f9fa;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    color: #7f8c8d;
    font-size: 0.9rem;
    font-weight: 600;
  }
}

.seccion-descripcion {
  margin-bottom: 2rem;

  p {
    font-size: 1.1rem;
    color: #5a6c7d;
    line-height: 1.6;
    margin: 0;
  }
}

// Pasos
.pasos-section {
  margin-bottom: 2rem;
}

.pasos-title {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  font-size: 1.3rem;
  color: #2c3e50;
  margin-bottom: 1.5rem;

  .pasos-icono {
    font-size: 1.5rem;
  }
}

.pasos-lista {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.paso-item {
  display: flex;
  gap: 1rem;
  align-items: flex-start;

  .paso-numero {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    flex-shrink: 0;
    font-size: 0.9rem;
  }

  .paso-contenido {
    flex: 1;

    p {
      margin: 0;
      color: #5a6c7d;
      line-height: 1.6;
      font-size: 1rem;
    }
  }
}

// Consejos
.consejos-section {
  margin-top: 2rem;
}

.consejos-title {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  font-size: 1.3rem;
  color: #2c3e50;
  margin-bottom: 1.5rem;

  .consejos-icono {
    font-size: 1.5rem;
  }
}

.consejos-lista {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.consejo-item {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  padding: 1rem;
  background: #f8f9fa;
  border-radius: 8px;
  border-left: 4px solid #ffd700;

  .consejo-icono {
    font-size: 1.2rem;
    flex-shrink: 0;
    margin-top: 0.1rem;
  }

  .consejo-texto {
    color: #5a6c7d;
    line-height: 1.5;
    flex: 1;
  }
}

// Todas las secciones (solo para impresiÃ³n)
.todas-secciones {
  display: none;

  @media print {
    display: block;
  }
}

.seccion-completa {
  margin-bottom: 3rem;
  page-break-inside: avoid;

  .seccion-header {
    border-bottom: 1px solid #ddd;
    margin-bottom: 1rem;
  }

  .seccion-titulo h2 {
    font-size: 1.5rem;
  }
}

// FAQ
.faq-section {
  margin-bottom: 2rem;
}

.faq-card {
  background: white;
  border-radius: 16px;
  padding: 2rem;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  border: 1px solid #f1f3f4;
}

.faq-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 1.5rem;
  text-align: center;
}

.faq-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 1.5rem;
}

.faq-item {
  padding: 1.5rem;
  background: #f8f9fa;
  border-radius: 12px;
  border-left: 4px solid #667eea;

  h4 {
    margin: 0 0 0.75rem 0;
    color: #2c3e50;
    font-size: 1.1rem;
  }

  p {
    margin: 0;
    color: #5a6c7d;
    line-height: 1.5;
    font-size: 0.95rem;
  }
}

// Soporte
.soporte-section {
  margin-bottom: 2rem;
}

.soporte-card {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 16px;
  padding: 2rem;
  color: white;
}

.soporte-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 2rem;
}

.soporte-info {
  flex: 1;
  min-width: 300px;

  h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
  }

  p {
    margin: 0;
    opacity: 0.9;
  }
}

.soporte-contactos {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  flex: 1;
  min-width: 300px;
}

.contacto-item {
  display: flex;
  align-items: center;
  gap: 1rem;

  .contacto-icono {
    font-size: 1.2rem;
    opacity: 0.9;
  }

  .contacto-texto {
    font-size: 1rem;
    opacity: 0.9;
  }
}

// Responsive
@media (max-width: 768px) {
  .manual {
    padding: 1rem;
  }

  .header .header-content {
    flex-direction: column;
    align-items: stretch;
  }

  .navegacion-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .seccion-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .soporte-content {
    flex-direction: column;
    align-items: flex-start;
  }

  .faq-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 480px) {
  .navegacion-grid {
    grid-template-columns: 1fr;
  }

  .header-actions {
    flex-direction: column;
  }

  .seccion-titulo {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
}

// Estilos para impresiÃ³n
@media print {
  .manual {
    padding: 0;
    max-width: none;
  }

  .header,
  .navegacion-rapida,
  .seccion-activa,
  .faq-section,
  .soporte-section {
    display: none;
  }

  .todas-secciones {
    display: block;
  }

  .seccion-completa {
    break-inside: avoid;
    margin-bottom: 2rem;
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 8px;
  }

  .page-title,
  .seccion-titulo h2,
  .pasos-title,
  .consejos-title {
    color: #000 !important;
  }

  .btn-primary,
  .btn-secondary {
    display: none;
  }
}
