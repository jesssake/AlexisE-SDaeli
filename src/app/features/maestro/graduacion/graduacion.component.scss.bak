.grad-wrapper {
  max-width: 600px;
  margin: 3rem auto;
  background: #fff;
  padding: 2rem;
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);

  .topbar {
    text-align: center;
    margin-bottom: 2rem;

    h1 {
      margin: 0;
      font-size: 1.8rem;
      color: #1f3c88;
    }

    p {
      color: #555;
      font-size: 0.95rem;
    }
  }

  .contenedor {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    input {
      padding: 0.6rem;
      border-radius: 8px;
      border: 1px solid #ccc;
    }

    .btn {
      background-color: #0f62fe;
      color: white;
      border: none;
      padding: 0.75rem;
      border-radius: 8px;
      cursor: pointer;
      font-weight: bold;
    }

    .alert {
      margin-top: 1rem;
      padding: 0.8rem;
      border-radius: 8px;

      &.ok {
        background: #e1f9ec;
        color: #217a48;
        border: 1px solid #78d6aa;
      }

      &.error {
        background: #ffe5e5;
        color: #a80000;
        border: 1px solid #f5b2b2;
      }
    }
  }
}
