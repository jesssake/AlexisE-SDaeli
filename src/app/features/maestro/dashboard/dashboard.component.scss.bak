/* ================================
   DISEÃ‘O FORMAL Y PROFESIONAL
   ================================ */

@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap');

:root {
  /* Colores profesionales */
  --primary-blue: #1e40af;
  --primary-blue-light: #3b82f6;
  --primary-blue-dark: #1e3a8a;
  
  --neutral-50: #f9fafb;
  --neutral-100: #f3f4f6;
  --neutral-200: #e5e7eb;
  --neutral-300: #d1d5db;
  --neutral-400: #9ca3af;
  --neutral-500: #6b7280;
  --neutral-600: #4b5563;
  --neutral-700: #374151;
  --neutral-800: #1f2937;
  --neutral-900: #111827;
  
  --success-green: #10b981;
  --success-green-dark: #0da271;
  --warning-orange: #f59e0b;
  --error-red: #ef4444;
  
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  
  --border-radius: 8px;
  --border-radius-lg: 12px;
  --border-radius-xl: 16px;
}

/* Reset y Base */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.dashboard-container.formal-theme {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--neutral-50) 0%, var(--neutral-100) 100%);
  color: var(--neutral-800);
  font-family: 'Inter', sans-serif;
  line-height: 1.6;
  padding: 2rem;
  position: relative;
}

/* Animaciones */
@keyframes slideIn {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(-20px);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* Header Elegante */
.header-formal {
  background: white;
  border-radius: var(--border-radius-xl);
  padding: 2.5rem;
  margin-bottom: 2rem;
  box-shadow: var(--shadow-lg);
  border: 1px solid var(--neutral-200);
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 2rem;
}

.welcome-section {
  flex: 1;
  min-width: 300px;
}

.welcome-title {
  font-size: 2.5rem;
  font-weight: 700;
  font-family: 'Plus Jakarta Sans', sans-serif;
  color: var(--neutral-900);
  margin-bottom: 0.5rem;
  background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-light) 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.welcome-subtitle {
  font-size: 1.1rem;
  color: var(--neutral-600);
  font-weight: 500;
}

/* SecciÃ³n de Fecha y Hora */
.date-section-formal {
  display: flex;
  gap: 1.5rem;
  flex-wrap: wrap;
}

.time-display, .date-display {
  background: var(--neutral-50);
  border: 1px solid var(--neutral-200);
  border-radius: var(--border-radius-lg);
  padding: 1.25rem 1.75rem;
  text-align: center;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

.time-display:hover, .date-display:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
}

.current-time {
  font-family: 'Plus Jakarta Sans', sans-serif;
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--primary-blue);
  display: block;
}

.current-date {
  font-size: 1.1rem;
  color: var(--neutral-800);
  font-weight: 600;
  display: block;
  margin-bottom: 0.25rem;
}

.current-month {
  font-size: 0.9rem;
  color: var(--neutral-600);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 500;
}

/* SecciÃ³n de Avisos */
.avisos-formales {
  background: white;
  border-radius: var(--border-radius-xl);
  padding: 2.5rem;
  box-shadow: var(--shadow-lg);
  border: 1px solid var(--neutral-200);
}

.section-header-formal {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 2.5rem;
  flex-wrap: wrap;
  gap: 1.5rem;
}

.title-section {
  flex: 1;
  min-width: 300px;
}

.section-title {
  font-size: 1.75rem;
  font-weight: 700;
  font-family: 'Plus Jakarta Sans', sans-serif;
  color: var(--neutral-900);
  margin-bottom: 0.5rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.section-description {
  color: var(--neutral-600);
  font-size: 1rem;
}

/* Controles de selecciÃ³n en el header */
.selection-controls {
  margin-top: 1rem;
}

/* Botones Formales */
.control-buttons {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.btn-formal {
  display: inline-flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.875rem 1.5rem;
  border-radius: var(--border-radius);
  font-family: 'Inter', sans-serif;
  font-size: 0.95rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
  text-decoration: none;
}

.btn-formal.primary {
  background: var(--primary-blue);
  color: white;
  box-shadow: var(--shadow-md);
}

.btn-formal.primary:hover {
  background: var(--primary-blue-dark);
  transform: translateY(-1px);
  box-shadow: var(--shadow-lg);
}

.btn-formal.secondary {
  background: white;
  color: var(--neutral-700);
  border: 1px solid var(--neutral-300);
}

.btn-formal.secondary:hover {
  background: var(--neutral-50);
  border-color: var(--neutral-400);
  transform: translateY(-1px);
}

.btn-formal.outline {
  background: transparent;
  color: var(--primary-blue);
  border: 1px solid var(--primary-blue);
}

.btn-formal.outline:hover {
  background: var(--primary-blue);
  color: white;
}

.btn-formal.success {
  background: var(--success-green);
  color: white;
  box-shadow: var(--shadow-md);
}

.btn-formal.success:hover {
  background: var(--success-green-dark);
  transform: translateY(-1px);
  box-shadow: var(--shadow-lg);
}

.btn-formal.small {
  padding: 0.5rem 1rem;
  font-size: 0.85rem;
}

.btn-formal:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none !important;
}

.btn-formal:disabled:hover {
  transform: none;
  background: var(--primary-blue);
}

.btn-formal.success:disabled:hover {
  background: var(--success-green);
}

.btn-icon {
  font-size: 1.1rem;
}

/* Estado VacÃ­o Formal */
.empty-state-formal {
  grid-column: 1 / -1;
  text-align: center;
  padding: 4rem 2rem;
  background: var(--neutral-50);
  border: 2px dashed var(--neutral-300);
  border-radius: var(--border-radius-xl);
}

.empty-icon {
  font-size: 4rem;
  margin-bottom: 1.5rem;
  opacity: 0.7;
}

.empty-state-formal h3 {
  font-size: 1.5rem;
  color: var(--neutral-700);
  margin-bottom: 1rem;
  font-weight: 600;
}

.empty-state-formal p {
  color: var(--neutral-600);
  font-size: 1rem;
  margin-bottom: 2.5rem;
  max-width: 400px;
  margin-left: auto;
  margin-right: auto;
}

/* Grid de Avisos Formal */
.avisos-grid-formal {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
  gap: 1.5rem;
}

/* Tarjetas de Avisos Formales */
.aviso-card-formal {
  background: white;
  border: 1px solid var(--neutral-200);
  border-radius: var(--border-radius-lg);
  padding: 1.75rem;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-sm);
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.aviso-card-formal::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 4px;
  height: 100%;
  transition: width 0.3s ease;
}

.aviso-card-formal.priority-alta::before {
  background: var(--error-red);
}

.aviso-card-formal.priority-media::before {
  background: var(--warning-orange);
}

.aviso-card-formal.priority-baja::before {
  background: var(--success-green);
}

.aviso-card-formal:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
  border-color: var(--neutral-300);
}

.aviso-card-formal:hover::before {
  width: 6px;
}

/* Header de Tarjeta */
.card-header-formal {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1.25rem;
  gap: 1rem;
}

.priority-indicator-formal {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  flex-shrink: 0;
}

.priority-dot-formal {
  width: 8px;
  height: 8px;
  border-radius: 50%;
}

.priority-alta .priority-dot-formal {
  background: var(--error-red);
}

.priority-media .priority-dot-formal {
  background: var(--warning-orange);
}

.priority-baja .priority-dot-formal {
  background: var(--success-green);
}

.priority-text-formal {
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  color: var(--neutral-600);
  letter-spacing: 0.5px;
}

.aviso-titulo-formal {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--neutral-900);
  line-height: 1.4;
  flex: 1;
}

/* Indicador de selecciÃ³n en tarjetas */
.selection-indicator {
  font-size: 1rem;
  flex-shrink: 0;
}

/* Contenido de Tarjeta */
.card-content-formal {
  flex: 1;
  margin-bottom: 1.5rem;
}

.aviso-text-formal {
  color: var(--neutral-700);
  line-height: 1.6;
  font-size: 1rem;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Footer de Tarjeta */
.card-footer-formal {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 1.25rem;
  border-top: 1px solid var(--neutral-200);
  font-size: 0.875rem;
  gap: 1rem;
  flex-wrap: wrap;
}

.footer-left {
  flex: 1;
  min-width: 150px;
}

.update-time-formal {
  color: var(--neutral-500);
  font-size: 0.8rem;
}

.footer-right {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  flex-wrap: wrap;
}

.status-badge-formal {
  padding: 0.35rem 0.75rem;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.status-badge-formal.visible {
  background: rgba(16, 185, 129, 0.1);
  color: var(--success-green);
  border: 1px solid rgba(16, 185, 129, 0.2);
}

.status-badge-formal.hidden {
  background: rgba(107, 114, 128, 0.1);
  color: var(--neutral-500);
  border: 1px solid rgba(107, 114, 128, 0.2);
}

/* Etiqueta de seleccionado en las tarjetas */
.selection-tag {
  background: var(--success-green);
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.card-actions-formal {
  display: flex;
  gap: 0.5rem;
}

.icon-btn-formal {
  background: var(--neutral-100);
  border: 1px solid var(--neutral-300);
  border-radius: 6px;
  padding: 0.5rem;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 2.25rem;
  height: 2.25rem;
}

.icon-btn-formal:hover {
  background: var(--neutral-200);
  transform: scale(1.05);
}

.icon-btn-formal.edit:hover {
  background: var(--primary-blue);
  color: white;
  border-color: var(--primary-blue);
}

.icon-btn-formal.toggle:hover {
  background: var(--warning-orange);
  color: white;
  border-color: var(--warning-orange);
}

.icon-btn-formal.delete:hover {
  background: var(--error-red);
  color: white;
  border-color: var(--error-red);
}

/* ================================
   MODALES FORMALES
   ================================ */

/* Overlay del Modal */
.modal-overlay-formal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  padding: 2rem;
  animation: modalFadeIn 0.3s ease;
}

/* Modal Principal */
.modal-formal {
  background: white;
  border-radius: var(--border-radius-xl);
  box-shadow: var(--shadow-xl);
  width: 100%;
  max-width: 500px;
  max-height: 90vh;
  overflow-y: auto;
  animation: modalFadeIn 0.3s ease;
  z-index: 1001;
}

.modal-formal.gestion-modal {
  max-width: 800px;
}

/* Header del Modal */
.modal-header-formal {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem 2rem;
  border-bottom: 1px solid var(--neutral-200);
  background: var(--neutral-50);
  border-radius: var(--border-radius-xl) var(--border-radius-xl) 0 0;
}

.modal-header-formal h3 {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--neutral-900);
  font-family: 'Plus Jakarta Sans', sans-serif;
  margin: 0;
}

.btn-close-formal {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  color: var(--neutral-500);
  width: 32px;
  height: 32px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.btn-close-formal:hover {
  background: var(--neutral-200);
  color: var(--neutral-700);
}

/* Cuerpo del Modal */
.modal-body-formal {
  padding: 2rem;
}

/* Formularios en Modal */
.form-group-formal {
  margin-bottom: 1.5rem;
}

.form-label {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: 500;
  color: var(--neutral-700);
  font-size: 0.95rem;
}

.form-input-formal,
.form-textarea-formal,
.form-select-formal {
  width: 100%;
  padding: 0.75rem 1rem;
  border: 1px solid var(--neutral-300);
  border-radius: var(--border-radius);
  font-family: 'Inter', sans-serif;
  font-size: 1rem;
  transition: all 0.2s ease;
  background: white;
}

.form-input-formal:focus,
.form-textarea-formal:focus,
.form-select-formal:focus {
  outline: none;
  border-color: var(--primary-blue);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.form-textarea-formal {
  resize: vertical;
  min-height: 100px;
}

/* Checkbox Personalizado */
.checkbox-formal {
  display: flex;
  align-items: center;
  cursor: pointer;
  gap: 0.75rem;
}

.checkbox-formal input {
  display: none;
}

.checkmark-formal {
  width: 20px;
  height: 20px;
  border: 2px solid var(--neutral-300);
  border-radius: 4px;
  position: relative;
  transition: all 0.2s ease;
}

.checkbox-formal input:checked + .checkmark-formal {
  background: var(--primary-blue);
  border-color: var(--primary-blue);
}

.checkbox-formal input:checked + .checkmark-formal::after {
  content: 'âœ“';
  position: absolute;
  color: white;
  font-size: 14px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.checkbox-text {
  font-size: 0.95rem;
  color: var(--neutral-700);
}

/* Acciones del Modal */
.modal-actions-formal {
  display: flex;
  justify-content: flex-end;
  gap: 1rem;
  padding: 1.5rem 2rem;
  border-top: 1px solid var(--neutral-200);
  background: var(--neutral-50);
  border-radius: 0 0 var(--border-radius-xl) var(--border-radius-xl);
}

/* ================================
   ACCIONES MASIVAS Y SELECCIÃ“N
   ================================ */

.bulk-actions-formal {
  display: flex;
  gap: 0.75rem;
  margin-bottom: 1.5rem;
  padding: 1rem;
  background: var(--neutral-50);
  border-radius: var(--border-radius);
  border: 1px solid var(--neutral-200);
  flex-wrap: wrap;
  align-items: center;
}

.selection-info {
  font-size: 0.85rem;
  color: var(--primary-blue);
  font-weight: 600;
  margin-top: 0.5rem;
  margin-bottom: 0;
}

/* ================================
   MODAL DE GESTIÃ“N DE AVISOS
   ================================ */

.gestion-description {
  color: var(--neutral-600);
  margin-bottom: 1.5rem;
  font-size: 0.95rem;
}

.gestion-list-formal {
  max-height: 400px;
  overflow-y: auto;
  margin-bottom: 1.5rem;
}

.gestion-item-formal {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 1.5rem;
  border: 1px solid var(--neutral-200);
  border-radius: var(--border-radius);
  margin-bottom: 1rem;
  background: var(--neutral-50);
  transition: all 0.2s ease;
  gap: 1rem;
}

/* Estilo para items seleccionados en la lista */
.gestion-item-formal.selected {
  border-left: 4px solid var(--success-green);
  background: rgba(16, 185, 129, 0.05);
}

/* Indicador visual de selecciÃ³n */
.gestion-item-formal.selected .gestion-info-formal h4 {
  color: var(--success-green);
}

.gestion-item-formal:hover {
  border-color: var(--neutral-300);
  box-shadow: var(--shadow-sm);
  transform: translateY(-2px);
}

.gestion-checkbox-formal {
  flex-shrink: 0;
  margin-top: 0.5rem;
}

.gestion-info-formal {
  flex: 1;
  margin-right: 1.5rem;
}

.gestion-info-formal h4 {
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--neutral-900);
  margin-bottom: 0.5rem;
}

.gestion-info-formal p {
  color: var(--neutral-600);
  font-size: 0.9rem;
  margin-bottom: 0.75rem;
  line-height: 1.5;
}

.gestion-meta-formal {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.priority-badge-formal.mini {
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
}

.priority-badge-formal.mini.alta {
  background: rgba(239, 68, 68, 0.1);
  color: var(--error-red);
  border: 1px solid rgba(239, 68, 68, 0.2);
}

.priority-badge-formal.mini.media {
  background: rgba(245, 158, 11, 0.1);
  color: var(--warning-orange);
  border: 1px solid rgba(245, 158, 11, 0.2);
}

.priority-badge-formal.mini.baja {
  background: rgba(16, 185, 129, 0.1);
  color: var(--success-green);
  border: 1px solid rgba(16, 185, 129, 0.2);
}

.fecha-formal {
  font-size: 0.8rem;
  color: var(--neutral-500);
}

.status-indicator-formal {
  font-size: 0.75rem;
  font-weight: 600;
  padding: 0.2rem 0.6rem;
  border-radius: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.status-indicator-formal.visible {
  background: rgba(16, 185, 129, 0.1);
  color: var(--success-green);
  border: 1px solid rgba(16, 185, 129, 0.2);
}

.status-indicator-formal.hidden {
  background: rgba(107, 114, 128, 0.1);
  color: var(--neutral-500);
  border: 1px solid rgba(107, 114, 128, 0.2);
}

.gestion-controls-formal {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-shrink: 0;
}

/* Toggle Switch */
.toggle-switch-formal {
  position: relative;
  display: inline-block;
  width: 44px;
  height: 24px;
}

.toggle-switch-formal input {
  opacity: 0;
  width: 0;
  height: 0;
}

.slider-formal {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--neutral-300);
  transition: .4s;
  border-radius: 24px;
}

.slider-formal:before {
  position: absolute;
  content: "";
  height: 18px;
  width: 18px;
  left: 3px;
  bottom: 3px;
  background-color: white;
  transition: .4s;
  border-radius: 50%;
}

input:checked + .slider-formal {
  background-color: var(--success-green);
}

input:checked + .slider-formal:before {
  transform: translateX(20px);
}

.toggle-label-formal {
  font-size: 0.85rem;
  color: var(--neutral-600);
  font-weight: 500;
  min-width: 60px;
}

.gestion-stats-formal {
  text-align: center;
  padding: 1rem;
  background: var(--neutral-100);
  border-radius: var(--border-radius);
  border: 1px solid var(--neutral-200);
}

.gestion-stats-formal p {
  color: var(--neutral-700);
  font-weight: 500;
  margin: 0;
}

/* Notificaciones */
.notification {
  animation: slideIn 0.3s ease;
}

/* Responsive Design */
@media (max-width: 1200px) {
  .avisos-grid-formal {
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  }
}

@media (max-width: 768px) {
  .dashboard-container.formal-theme {
    padding: 1rem;
  }
  
  .header-formal {
    padding: 2rem 1.5rem;
    flex-direction: column;
    text-align: center;
  }
  
  .welcome-title {
    font-size: 2rem;
  }
  
  .section-header-formal {
    flex-direction: column;
    text-align: center;
  }
  
  .title-section {
    text-align: center;
  }
  
  .control-buttons {
    justify-content: center;
  }
  
  .avisos-grid-formal {
    grid-template-columns: 1fr;
  }
  
  .date-section-formal {
    justify-content: center;
  }
  
  .card-footer-formal {
    flex-direction: column;
    align-items: stretch;
    gap: 1rem;
  }
  
  .footer-right {
    justify-content: space-between;
  }
  
  .modal-overlay-formal {
    padding: 1rem;
  }
  
  .modal-formal {
    margin: 1rem;
    max-height: calc(100vh - 2rem);
  }
  
  .gestion-item-formal {
    flex-direction: column;
    align-items: stretch;
    gap: 1rem;
  }
  
  .gestion-info-formal {
    margin-right: 0;
  }
  
  .gestion-controls-formal {
    justify-content: space-between;
    flex-wrap: wrap;
  }
  
  .toggle-label-formal {
    min-width: auto;
  }
  
  .modal-actions-formal {
    flex-direction: column;
  }
  
  .bulk-actions-formal {
    flex-direction: column;
    align-items: stretch;
  }
  
  .btn-formal.small {
    text-align: center;
    justify-content: center;
  }
  
  .gestion-meta-formal {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
  
  .selection-controls {
    text-align: center;
    margin-top: 1rem;
  }
}

@media (max-width: 480px) {
  .welcome-title {
    font-size: 1.75rem;
  }
  
  .section-title {
    font-size: 1.5rem;
  }
  
  .aviso-card-formal {
    padding: 1.5rem;
  }
  
  .card-header-formal {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.75rem;
  }
  
  .priority-indicator-formal {
    align-self: flex-start;
  }
  
  .modal-body-formal {
    padding: 1.5rem;
  }
  
  .modal-header-formal,
  .modal-actions-formal {
    padding: 1.25rem 1.5rem;
  }
  
  .priority-badge-formal.mini {
    font-size: 0.7rem;
    padding: 0.2rem 0.6rem;
  }
  
  .gestion-controls-formal {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
  
  .toggle-switch-formal {
    align-self: flex-start;
  }
  
  .selection-tag {
    font-size: 0.7rem;
    padding: 0.2rem 0.5rem;
  }
}
