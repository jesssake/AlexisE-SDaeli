.rep-wrapper {
  display: grid;
  gap: 16px;
}

.loading {
  opacity: .7;
  pointer-events: none;
}

.topbar {
  display: flex; align-items: center; justify-content: space-between;
  .title h1 { margin: 0 0 4px; }
  .title p { margin: 0; opacity: .8; }
  .actions { display: flex; gap: 8px; }
}

.card {
  background: #fff;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 6px 24px rgba(0,0,0,.06);
}

.filters .row {
  display: grid;
  grid-template-columns: 180px 180px 1fr auto;
  gap: 12px;
  align-items: end;
  margin-bottom: 10px;

  label {
    display: grid; gap: 6px;
    font-weight: 600;
  }

  .grow { width: 100%; }
}

.kpis {
  display: grid; grid-template-columns: repeat(4, minmax(120px,1fr)); gap: 10px;
  .kpi { background: #f8f9ff; border-radius: 12px; padding: 10px; text-align: center; }
  .kpi-num { font-size: 22px; font-weight: 800; }
  .kpi-label { opacity: .7; }
}

.list .item {
  display: grid;
  grid-template-columns: 56px 1fr auto;
  gap: 12px;
  padding: 14px;
  border: 1px solid #eee;
  border-radius: 14px;
  + .item { margin-top: 10px; }
}

.avatar {
  width: 56px; height: 56px; border-radius: 50%;
  display:grid; place-items:center;
  background: linear-gradient(135deg,#a8d0ff,#e6f0ff);
  font-weight: 800; color:#2a3b5a;
}

.meta .motivo { margin: 4px 0 2px; font-weight: 600; }
.meta .desc { margin: 0 0 6px; color:#333; }
.meta .sub { font-size: 12px; opacity:.75; }

.ops { display:flex; gap:8px; align-items:center; }

.btn {
  border: 0; border-radius: 10px; padding: 8px 12px; cursor: pointer;
  background: #6c63ff; color: #fff; font-weight: 700;
}
.btn.ghost { background: #eef0ff; color:#2a2a5a; }

.badge { padding: 3px 8px; border-radius: 999px; font-size: 12px; font-weight: 800; }
.badge.warn { background: #fff4db; color: #a66b00; }
.badge.info { background: #e9f3ff; color: #0b63b9; }
.badge.success { background: #e8fbef; color: #18794e; }

.chip { padding: 2px 8px; border-radius: 999px; font-size: 12px; font-weight: 700; border: 1px solid transparent; }
.chip.low { background: #f6ffed; color:#2d7a0b; border-color:#d9f7be; }
.chip.med { background: #fff7e6; color:#ad6800; border-color:#ffe7ba; }
.chip.high { background: #fff1f0; color:#a8071a; border-color:#ffa39e; }

.alerts { display:grid; gap: 8px; }
.alert {
  padding:10px 12px; border-radius: 10px; font-weight: 600;
  &.error { background:#fff1f0; color:#a8071a; }
  &.ok { background:#e6fffb; color:#006d75; }
}

.empty { text-align: center; color:#555; }

.modal-backdrop {
  /* REMOVIDO POR PARCHE: capa fija sobre toda la pantalla */
}
.modal {
  position: fixed; left:50%; top:50%; transform: translate(-50%,-50%);
  width: min(640px, 92vw);
  z-index: 10;
}
.modal-actions { display:flex; justify-content:flex-end; gap:8px; margin-top: 10px; }

@media (max-width: 860px) {
  .filters .row { grid-template-columns: 1fr 1fr; }
  .list .item { grid-template-columns: 48px 1fr; }
  .ops { grid-column: 1 / -1; }
}


/* Backdrop seguro por clase (usar con *ngIf) */
.modal-backdrop{ position:fixed; inset:0; background:rgba(0,0,0,.45); z-index:999; }
