.calif {
  display: grid;
  gap: 14px;
  &.loading { opacity: .7; pointer-events: none; }
}

.top {
  display: flex; justify-content: space-between; align-items: center;
  background: #fff; padding: 12px 14px; border-radius: 14px;
  box-shadow: 0 6px 20px rgba(0,0,0,.06);
  .lh { h1 { margin: 0 0 4px; } p { margin: 0; color: #666; } }
  .rh { button { border: 1px solid #e3e6ef; background: #f7f9ff; border-radius: 10px; padding: 8px 12px; } }
}

.msg.info { padding: 10px; background: #eef6ff; border: 1px solid #cfe4ff; border-radius: 10px; }
.msg.error{ padding: 10px; background: #ffecec; border: 1px solid #ffcaca; border-radius: 10px; }

.kpis {
  display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 12px;
  .kpi {
    background: #fff; border-radius: 14px; box-shadow: 0 6px 20px rgba(0,0,0,.06); padding: 12px;
    .kpi-title { color: #666; font-size: 14px; }
    .kpi-value { font-size: 28px; font-weight: 800; }
  }
}

.trimestres { display: grid; gap: 14px; }
.trim {
  background: #fff; border-radius: 14px; box-shadow: 0 6px 20px rgba(0,0,0,.06); padding: 12px;
  .trim-head {
    display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;
    h2 { margin: 0; }
    .prom { color: #333; }
  }
}

.tabla {
  display: grid; gap: 6px;
  .th, .row { display: grid; grid-template-columns: 2fr 1fr 0.7fr; gap: 8px; align-items: center; }
  .th { font-weight: 700; color: #444; border-bottom: 1px solid #f0f0f0; padding-bottom: 6px; }
  .row { padding: 6px 0; border-bottom: 1px dashed #f2f2f2; }
  .cell.title .titulo { font-weight: 600; }
  .cell.title .sub { color: #666; font-size: 12px; margin-top: 2px; white-space: pre-wrap; }
  .cell.nota { font-weight: 800; }
  .empty { text-align: center; color: #666; padding: 8px 0; grid-column: 1 / -1; }
}
