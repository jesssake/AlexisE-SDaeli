.configuracion {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24px;
  padding: 16px;
}

.panel {
  background: #fff;
  border: 1px solid #e7e7e7;
  border-radius: 14px;
  padding: 16px 18px;

  h2, h3 { margin: 0 0 12px; }
}

.head {
  grid-column: 1 / -1;
  display: flex; justify-content: space-between; align-items: center;

  .user { display: flex; gap: 12px; align-items: center; }
  .avatar {
    width: 64px; height: 64px; border-radius: 50%; overflow: hidden; border: 1px solid #e5e7eb;
    img { width: 100%; height: 100%; object-fit: cover; }
    .placeholder { width: 100%; height: 100%; display:flex; align-items:center; justify-content:center; background:#f3f4f6; font-weight:800; }
  }
  .info .sub { color: #6b7280; }
  .flash { background: #dcfce7; border: 1px solid #86efac; padding: 6px 10px; border-radius: 8px; }
}

/* Formularios */
.grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;

  .field { display: grid; gap: 6px; }
  .avatarField { grid-column: 1 / -1; }
  .picker { display: flex; gap: 8px; align-items: center; }

  input, select, textarea {
    border: 1px solid #d9d9d9; border-radius: 10px; padding: 10px 12px; font: inherit; outline: none;
    &:focus { border-color: #7aa7ff; box-shadow: 0 0 0 3px rgba(122,167,255,.2); }
  }

  .switches {
    grid-column: 1 / -1;
    display: flex; gap: 16px; flex-wrap: wrap;
    label { display: flex; gap: 8px; align-items: center; }
  }

  .actions {
    grid-column: 1 / -1; display: flex; gap: 8px; justify-content: flex-end;
    button {
      border: none; border-radius: 10px; padding: 8px 12px; cursor: pointer; background: #2563eb; color: #fff;
      &.ghost { background: #111827; }
    }
  }

  .err { color: #b00020; font-size: .85rem; }
}

/* Responsive */
@media (max-width: 1100px) {
  .configuracion { grid-template-columns: 1fr; }
  .grid { grid-template-columns: 1fr; }
}
