// login.component.scss
@import url('https://fonts.googleapis.com/css2?family=Comic+Neue:wght@300;400;700&family=Nunito:wght@300;400;600;700;800&family=Poppins:wght@300;400;500;600;700;800&display=swap');

:host {
  display: block;
  min-height: 100vh;
  font-family: 'Poppins', sans-serif;
  position: relative;
  overflow: hidden;
}

// El fondo vendrÃ¡ desde el styles.scss global
// AquÃ­ solo nos aseguramos de que el contenedor sea transparente

.login-container {
  max-width: 480px;
  margin: 0 auto;
  padding: 2rem;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  z-index: 10;
}

// Header semi-transparente
.login-header {
  text-align: center;
  margin-bottom: 3rem;
  position: relative;
  
  h1 {
    font-family: 'Comic Neue', cursive;
    font-size: 3.5rem;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 0.5rem;
    text-shadow: 
      3px 3px 8px rgba(0, 0, 0, 0.6),
      0 0 30px rgba(255, 255, 255, 0.4);
    animation: bounce 2s infinite, glow 3s infinite alternate;
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.95) 0%, 
      rgba(248, 249, 250, 0.9) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
  }
  
  p {
    font-size: 1.3rem;
    color: rgba(255, 255, 255, 0.95);
    font-weight: 400;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
    animation: fadeInUp 1s ease-out;
    background: rgba(255, 255, 255, 0.15);
    padding: 12px 24px;
    border-radius: 25px;
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    display: inline-block;
    margin-top: 1rem;
  }
}

// Formulario ultra transparente para ver el fondo
.login-form {
  background: rgba(255, 255, 255, 0.1);
  padding: 3rem 2.5rem;
  border-radius: 25px;
  box-shadow: 
    0 20px 40px rgba(0, 0, 0, 0.2),
    0 0 80px rgba(102, 126, 234, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20px) saturate(160%);
  border: 1px solid rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  animation: formSlideIn 0.8s ease-out;
  
  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent, 
      rgba(255, 255, 255, 0.1), 
      transparent);
    transition: left 0.8s;
  }
  
  &:hover {
    transform: translateY(-5px);
    box-shadow: 
      0 30px 60px rgba(0, 0, 0, 0.25),
      0 0 100px rgba(102, 126, 234, 0.15);
    background: rgba(255, 255, 255, 0.12);
    
    &::before {
      left: 100%;
    }
  }
}

// Grupos de formulario ultra transparentes
.form-group {
  margin-bottom: 2rem;
  position: relative;
  
  label {
    display: block;
    margin-bottom: 0.8rem;
    color: rgba(255, 255, 255, 0.95);
    font-weight: 600;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.8px;
    transition: all 0.3s ease;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
  }
  
  // Inputs ultra transparentes
  input[type="email"],
  input[type="password"],
  input[type="text"] {
    width: 100%;
    padding: 16px 20px;
    border: 2px solid rgba(255, 255, 255, 0.25);
    border-radius: 15px;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(15px);
    color: white;
    box-shadow: 
      inset 0 2px 6px rgba(0, 0, 0, 0.2),
      0 4px 12px rgba(0, 0, 0, 0.15);
    
    &::placeholder {
      color: rgba(255, 255, 255, 0.6);
      font-weight: 400;
    }
    
    &:focus {
      outline: none;
      border-color: rgba(255, 255, 255, 0.5);
      background: rgba(255, 255, 255, 0.12);
      box-shadow: 
        inset 0 2px 6px rgba(0, 0, 0, 0.2),
        0 0 0 4px rgba(255, 255, 255, 0.1),
        0 8px 20px rgba(255, 255, 255, 0.15);
      transform: translateY(-2px);
    }
    
    &:hover:not(:focus) {
      border-color: rgba(255, 255, 255, 0.35);
      transform: translateY(-1px);
      background: rgba(255, 255, 255, 0.1);
    }
  }
}

// Contenedor de contraseÃ±a
.password-container {
  position: relative;
  
  input {
    padding-right: 70px;
  }
}

// BotÃ³n del mono ultra transparente
.monkey-eye-container {
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  z-index: 20;
}

.monkey-eye-button {
  background: linear-gradient(135deg, 
    rgba(102, 126, 234, 0.6) 0%, 
    rgba(118, 75, 162, 0.6) 100%);
  border: none;
  font-size: 1.8rem;
  cursor: pointer;
  padding: 8px;
  border-radius: 12px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: 
    0 4px 15px rgba(102, 126, 234, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.2);
  position: relative;
  backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.15);
  
  &:hover {
    transform: translateY(-50%) scale(1.1) rotate(5deg);
    box-shadow: 
      0 6px 20px rgba(102, 126, 234, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.25);
    background: linear-gradient(135deg, 
      rgba(102, 126, 234, 0.7) 0%, 
      rgba(118, 75, 162, 0.7) 100%);
  }
  
  &:active {
    transform: translateY(-50%) scale(0.95);
  }
  
  &.visible {
    background: linear-gradient(135deg, 
      rgba(240, 147, 251, 0.6) 0%, 
      rgba(245, 87, 108, 0.6) 100%);
  }
}

.monkey-emoji {
  font-size: 1.8rem;
  display: block;
  transition: all 0.3s ease;
  filter: drop-shadow(1px 1px 2px rgba(0, 0, 0, 0.5));
}

// Speech bubble semi-transparente
.speech-bubble {
  background: rgba(255, 255, 255, 0.95);
  padding: 10px 15px;
  border-radius: 20px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.25);
  margin-top: 10px;
  position: absolute;
  bottom: 100%;
  right: 0;
  margin-bottom: 10px;
  animation: fadeIn 0.3s ease;
  font-family: 'Comic Neue', cursive;
  font-weight: 500;
  color: #2d3748;
  font-size: 0.9rem;
  max-width: 200px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  
  &::after {
    content: '';
    position: absolute;
    top: 100%;
    right: 20px;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-top: 10px solid rgba(255, 255, 255, 0.95);
  }
}

// Radio group ultra transparente
.radio-group {
  display: flex;
  gap: 1.5rem;
  margin-top: 1rem;
  
  label {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    cursor: pointer;
    padding: 12px 20px;
    border-radius: 15px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-weight: 500;
    margin-bottom: 0;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(15px);
    border: 2px solid transparent;
    flex: 1;
    justify-content: center;
    text-transform: none;
    letter-spacing: normal;
    color: rgba(255, 255, 255, 0.95);
    
    &:hover {
      background: rgba(255, 255, 255, 0.12);
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }
    
    input[type="radio"] {
      margin: 0;
      width: 20px;
      height: 20px;
      accent-color: rgba(255, 255, 255, 0.7);
      transform: scale(1.1);
    }
    
    // Estado activo
    &:has(input[type="radio"]:checked) {
      background: linear-gradient(135deg, 
        rgba(102, 126, 234, 0.2) 0%, 
        rgba(118, 75, 162, 0.2) 100%);
      color: white;
      border-color: rgba(255, 255, 255, 0.25);
      box-shadow: 
        0 8px 25px rgba(102, 126, 234, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }
  }
}

// BotÃ³n de login ultra transparente
.login-btn {
  width: 100%;
  padding: 18px;
  background: linear-gradient(135deg, 
    rgba(102, 126, 234, 0.7) 0%, 
    rgba(118, 75, 162, 0.7) 50%, 
    rgba(240, 147, 251, 0.7) 100%);
  color: white;
  border: none;
  border-radius: 15px;
  font-size: 1.2rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  margin-top: 2rem;
  font-family: 'Poppins', sans-serif;
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  letter-spacing: 1px;
  box-shadow: 
    0 10px 30px rgba(102, 126, 234, 0.25),
    0 0 0 1px rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  
  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent, 
      rgba(255, 255, 255, 0.2), 
      transparent);
    transition: left 0.6s;
  }
  
  &:hover:not(:disabled) {
    transform: translateY(-4px);
    box-shadow: 
      0 20px 40px rgba(102, 126, 234, 0.35),
      0 0 0 1px rgba(255, 255, 255, 0.25);
    letter-spacing: 1.5px;
    background: linear-gradient(135deg, 
      rgba(102, 126, 234, 0.8) 0%, 
      rgba(118, 75, 162, 0.8) 50%, 
      rgba(240, 147, 251, 0.8) 100%);
    
    &::before {
      left: 100%;
    }
  }
  
  &:active:not(:disabled) {
    transform: translateY(-1px);
  }
  
  &:disabled {
    background: linear-gradient(135deg, 
      rgba(203, 213, 224, 0.4) 0%, 
      rgba(160, 174, 192, 0.4) 100%);
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }
  
  .btn-content {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }
}

// Footer links ultra transparente
.footer-links {
  text-align: center;
  margin-top: 3rem;
  position: relative;
  
  a {
    color: rgba(255, 255, 255, 0.95);
    text-decoration: none;
    font-weight: 600;
    padding: 15px 30px;
    border-radius: 25px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: inline-flex;
    align-items: center;
    gap: 10px;
    font-size: 1rem;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    
    &:hover {
      background: rgba(255, 255, 255, 0.18);
      transform: translateY(-3px);
      box-shadow: 
        0 15px 35px rgba(0, 0, 0, 0.2),
        0 0 30px rgba(255, 255, 255, 0.1);
      letter-spacing: 0.5px;
      color: white;
    }
  }
}

// Animaciones
@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0) scale(1);
  }
  40% {
    transform: translateY(-15px) scale(1.05);
  }
  60% {
    transform: translateY(-7px) scale(1.02);
  }
}

@keyframes glow {
  0% {
    text-shadow: 
      3px 3px 8px rgba(0, 0, 0, 0.6),
      0 0 30px rgba(255, 255, 255, 0.3);
  }
  100% {
    text-shadow: 
      3px 3px 8px rgba(0, 0, 0, 0.6),
      0 0 50px rgba(255, 255, 255, 0.5),
      0 0 70px rgba(255, 255, 255, 0.3);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes formSlideIn {
  from {
    opacity: 0;
    transform: translateY(50px) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

// Loading spinner
.loading-spinner {
  display: inline-block;
  width: 24px;
  height: 24px;
  border: 3px solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: rgba(255, 255, 255, 0.9);
  animation: spin 1s ease-in-out infinite;
}

.loading-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  color: rgba(255, 255, 255, 0.95);
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

// Responsive design
@media (max-width: 768px) {
  .login-container {
    padding: 1rem;
  }
  
  .login-header h1 {
    font-size: 2.8rem;
  }
  
  .login-form {
    padding: 2rem 1.5rem;
  }
  
  .radio-group {
    flex-direction: column;
    gap: 1rem;
  }
  
  .monkey-eye-button {
    width: 45px;
    height: 45px;
    font-size: 1.6rem;
  }
  
  .password-container input {
    padding-right: 65px;
  }
}

@media (max-width: 480px) {
  .login-header h1 {
    font-size: 2.2rem;
  }
  
  .login-form {
    padding: 1.5rem 1rem;
    border-radius: 20px;
  }
  
  .form-group input[type="email"],
  .form-group input[type="password"],
  .form-group input[type="text"] {
    padding: 14px 16px;
  }
  
  .monkey-eye-button {
    width: 42px;
    height: 42px;
    font-size: 1.5rem;
  }
  
  .password-container input {
    padding-right: 60px;
  }
  
  .speech-bubble {
    font-size: 0.8rem;
    max-width: 150px;
  }


