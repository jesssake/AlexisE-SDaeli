/* Animaciones de transiciÃ³n entre login y registro */
.login-container {
  animation: pageSlideIn 0.6s ease-out;
}

@keyframes pageSlideIn {
  from {
    opacity: 0;
    transform: translateY(30px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes pageSlideOut {
  from {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  to {
    opacity: 0;
    transform: translateY(-30px) scale(0.95);
  }
}

@keyframes slideFromRight {
  from {
    opacity: 0;
    transform: translateX(50px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideToLeft {
  from {
    opacity: 1;
    transform: translateX(0);
  }
  to {
    opacity: 0;
    transform: translateX(-50px);
  }
}

/* Estados de animaciÃ³n para transiciones */
.page-transition {
  &-enter {
    animation: slideFromRight 0.5s ease-out;
  }
  
  &-leave {
    animation: slideToLeft 0.5s ease-out;
  }
}

/* Efecto de desvanecimiento para todo el contenedor */
.fade-transition {
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  
  &.fade-out {
    opacity: 0;
    transform: translateY(-20px) scale(0.98);
  }
  
  &.fade-in {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* AnimaciÃ³n especial para el mono durante transiciones */
.monkey-transition {
  transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  
  &.monkey-exit {
    transform: scale(0.8) rotate(-10deg);
    opacity: 0;
  }
  
  &.monkey-enter {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

/* Efecto de partÃ­culas durante la transiciÃ³n */
.transition-particles {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1000;
  
  .particle {
    position: absolute;
    width: 6px;
    height: 6px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 50%;
    animation: floatParticle 1.5s ease-in-out infinite;
    
    &:nth-child(1) {
      top: 20%;
      left: 10%;
      animation-delay: 0s;
    }
    
    &:nth-child(2) {
      top: 60%;
      left: 80%;
      animation-delay: 0.3s;
    }
    
    &:nth-child(3) {
      top: 40%;
      left: 40%;
      animation-delay: 0.6s;
    }
  }
}

@keyframes floatParticle {
  0%, 100% {
    transform: translateY(0) scale(1);
    opacity: 0.7;
  }
  50% {
    transform: translateY(-20px) scale(1.2);
    opacity: 1;
  }
}

/* Loading durante transiciÃ³n */
.transition-loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
  
  .transition-spinner {
    width: 60px;
    height: 60px;
    border: 4px solid rgba(255, 255, 255, 0.3);
    border-top: 4px solid #667eea;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    box-shadow: 0 0 20px rgba(102, 126, 234, 0.5);
  }
  
  .transition-text {
    margin-top: 15px;
    color: white;
    font-weight: 600;
    text-align: center;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    animation: pulse 2s infinite;
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.7;
  }
  50% {
    opacity: 1;
  }
}

/* Mejoras responsive para animaciones */
@media (max-width: 768px) {
  .transition-loading {
    .transition-spinner {
      width: 50px;
      height: 50px;
    }
    
    .transition-text {
      font-size: 0.9rem;
    }
  }
}
}
