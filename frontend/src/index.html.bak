<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>GestionEducativa</title>
  <base href="/">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/x-icon" href="favicon.ico">

  <!-- DEV: Fuerza ir a /auth/login siempre -->
  <script>
    (function () {
      try {
        // Si NO estás ya en /auth/* => limpia y manda a login
        if (!location.pathname.startsWith('/auth/')) {
          localStorage.clear();
          sessionStorage.clear();
          // Usa replace para evitar volver con "Atrás"
          location.replace('/auth/login');
        }
      } catch (e) { /* no-op */ }
    })();
  </script>
</head>
<body>
  <app-root></app-root>
</body>
</html>

