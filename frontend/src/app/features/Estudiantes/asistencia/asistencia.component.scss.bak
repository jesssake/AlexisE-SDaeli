.asist-wrapper {
  display: grid;
  gap: 16px;
  &.loading { opacity: .7; pointer-events: none; }
}

.top {
  background: #fff;
  border-radius: 14px;
  padding: 16px;
  box-shadow: 0 6px 20px rgba(0,0,0,.06);
  h1 { margin: 0 0 4px; }
  .filtros {
    margin-top: 12px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 12px;
    .grupo { display: grid; gap: 6px; }
    .acciones {
      display: flex; gap: 8px; align-items: end;
      button { padding: 8px 12px; border-radius: 10px; border: 1px solid #ddd; background:#f8f8ff; }
    }
  }
}

.msg.info { padding: 10px; background: #eef6ff; border: 1px solid #cfe4ff; border-radius: 10px; }
.msg.error{ padding: 10px; background: #ffecec; border: 1px solid #ffcaca; border-radius: 10px; }

.kpis {
  display: grid; grid-template-columns: repeat(4, 1fr); gap: 10px;
  .kpi {
    background: #fff; border-radius: 14px; padding: 12px; text-align: center; box-shadow: 0 6px 20px rgba(0,0,0,.06);
    .lbl { display:block; color:#666; font-size: 12px;}
    .val { font-size: 22px; font-weight: 700; }
    &.g .val { color: #1aa36f; }
    &.y .val { color: #c6931a; }
    &.r .val { color: #e05151; }
  }
}

.tabla {
  background: #fff; border-radius: 14px; box-shadow: 0 6px 20px rgba(0,0,0,.06);
  .head, .row {
    display: grid; grid-template-columns: 120px 80px 140px 1fr 100px; gap: 8px; padding: 12px 14px;
  }
  .head { font-weight: 700; border-bottom: 1px solid #eee; background: #fafbff; }
  .row:not(.empty) { border-bottom: 1px dashed #eee; }
  .row.empty .full { grid-column: 1/-1; text-align: center; color:#666; padding: 14px 0; }
  .badge {
    padding: 4px 10px; border-radius: 999px; font-weight: 700; font-size: 12px; border: 1px solid transparent;
    &.b-green { background:#e9fbf3; color:#138a61; border-color:#b9f0d5; }
    &.b-amber { background:#fff6e2; color:#aa7f0a; border-color:#f7e0a8; }
    &.b-red   { background:#ffecec; color:#b24a4a; border-color:#ffd2d2; }
    &.b-gray  { background:#f2f3f5; color:#666; border-color:#e1e4e8; }
  }
  .coment { color:#333; }
}
