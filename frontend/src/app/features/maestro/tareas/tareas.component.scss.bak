/* ===== LAYOUT GENERAL ===== */

.page-wrap {
  padding: 1.5rem 1rem 4rem;
  max-width: 1100px;
  margin: 0 auto;
  color: #e1e1e1;
  font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont,
               "Segoe UI", Roboto, sans-serif;
}

.page-title {
  font-size: 1.4rem;
  font-weight: 600;
  background: linear-gradient(to right, #4f46e5, #9333ea);
  -webkit-background-clip: text;
          background-clip: text;
  color: transparent;
  margin: 0 0 1rem 0;
  text-shadow: 0 0 20px rgba(147,51,234,.25);
}

/* ===== TARJETA (CARD) ===== */

.card {
  background: #1f2537;
  border-radius: 16px;
  border: 1px solid rgba(255,255,255,.08);
  color: #fff;
  box-shadow:
    0 30px 60px rgba(0,0,0,.8),
    0 10px 20px rgba(0,0,0,.6),
    0 2px 4px rgba(0,0,0,.5);
  padding: 1rem 1rem 1.25rem;
  margin-bottom: 2rem;
  position: relative;
}

.card::before {
  content: "";
  position: absolute;
  left: 0; right: 0; top: 0;
  height: 4px;
  border-radius: 12px 12px 0 0;
  background: linear-gradient(to right,#4f46e5,#a855f7,#facc15);
  box-shadow:0 10px 30px rgba(168,85,247,.5);
}

.card-header {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  row-gap: .75rem;
}

.card-title {
  color: #fff;
  font-size: 1.1rem;
  font-weight: 600;
  margin: 0 0 .25rem 0;
  text-shadow: 0 4px 12px rgba(0,0,0,.6);
}

.card-desc {
  margin: 0;
  font-size: .85rem;
  color: #cbd5e1;
  line-height: 1.3;
}

.actions-right {
  display: flex;
  flex-wrap: wrap;
  gap: .5rem;
  align-items: flex-start;
}

/* ===== BOTONES ===== */

.btn {
  appearance: none;
  border: 0;
  outline: 0;
  cursor: pointer;

  font-size: .8rem;
  font-weight: 600;
  line-height: 1.2;
  padding: .65rem .9rem;

  border-radius: .6rem;
  display: inline-flex;
  align-items: center;
  gap: .4rem;

  box-shadow:
    0 20px 40px rgba(0,0,0,.8),
    0 8px 16px rgba(0,0,0,.6),
    0 1px 2px rgba(0,0,0,.6);

  color: #fff;
  text-shadow: 0 2px 4px rgba(0,0,0,.8);
  user-select: none;
  white-space: nowrap;
}

.btn[disabled] {
  opacity: .4;
  cursor: not-allowed;
  filter: grayscale(1);
}

.btn-neutral {
  background: #1e293b;
  border: 1px solid rgba(255,255,255,.12);
}

.btn-primary {
  background: linear-gradient(to right,#4f46e5,#6366f1);
  border: 1px solid rgba(255,255,255,.15);
}

.btn-warning {
  background: linear-gradient(to right,#9ca3af,#6b7280);
  border: 1px solid rgba(255,255,255,.2);
}

.btn-danger {
  background: linear-gradient(to right,#7f1d1d,#dc2626);
  border: 1px solid rgba(255,255,255,.15);
}

.btn-ver {
  background: #0f172a;
  border: 1px solid rgba(255,255,255,.2);
}

.btn-calificar {
  background: #065f46;
  border: 1px solid rgba(255,255,255,.2);
}

.btn-guardar {
  background: #065f46;
  border: 1px solid rgba(255,255,255,.2);
  width: 100%;
  justify-content: center;
}

.btn-cancelar {
  background: #6b7280;
  border: 1px solid rgba(255,255,255,.2);
  width: 100%;
  justify-content: center;
}

/* botÃ³n para ver archivo */
.btn-archivo {
  display: inline-block;
  background: #1f9d55;
  color: #fff;
  font-size: .75rem;
  font-weight: 600;
  padding: .4rem .6rem;
  border-radius: .5rem;
  text-decoration: none;
  box-shadow: 0 8px 20px rgba(0,0,0,.4),
              0 2px 4px rgba(0,0,0,.5);
  white-space: nowrap;
}
.btn-archivo:hover {
  filter: brightness(1.1);
}

.emoji {
  font-size: .9rem;
}

/* ===== TABLAS ===== */

.tabla {
  width: 100%;
  border-collapse: collapse;
  margin-top: 1rem;
  background: rgba(15,23,42,.6);
  border-radius: .6rem;
  overflow: hidden;
  font-size: .8rem;
  color: #fff;
  box-shadow:
    0 30px 60px rgba(0,0,0,.8),
    0 12px 24px rgba(0,0,0,.6),
    0 2px 4px rgba(0,0,0,.5);
  border: 1px solid rgba(255,255,255,.06);
}

.tabla thead {
  background: rgba(15,23,42,.9);
  color: #cbd5e1;
  text-align: left;
}

.tabla th {
  font-weight: 600;
  padding: .75rem 1rem;
  border-bottom: 1px solid rgba(255,255,255,.07);
  font-size: .75rem;
  text-transform: uppercase;
  letter-spacing: .03em;
}

.tabla tbody tr {
  background: rgba(15,23,42,.4);
}

.tabla tbody tr + tr {
  border-top: 1px solid rgba(255,255,255,.07);
}

.tabla td {
  padding: .9rem 1rem;
  vertical-align: top;
  color: #fff;
  font-size: .8rem;
  line-height: 1.35;
}

.row-activa {
  background: rgba(147,51,234,.15) !important;
  box-shadow: inset 0 0 10px rgba(147,51,234,.5);
}

.titulo-col .titulo {
  font-weight: 600;
  font-size: .9rem;
  color: #fff;
  text-shadow: 0 4px 10px rgba(0,0,0,.9);
}

.titulo-col .instrucciones {
  font-size: .75rem;
  color: #cbd5e1;
  margin-top: .25rem;
  line-height: 1.3;
}

.comentario-alumno {
  max-width: 180px;
  word-break: break-word;
  color: #e2e8f0;
  font-size: .75rem;
}

.archivo-entrega {
  text-align: center;
}

.file-name {
  font-size: .7rem;
  color: #cbd5e1;
  word-break: break-all;
  margin-bottom: .25rem;
}

/* ===== BADGE ESTADO TAREA (ACTIVA/INACTIVA) ===== */

.badge {
  display: inline-block;
  min-width: 3rem;
  padding: .4rem .6rem;
  font-size: .7rem;
  font-weight: 600;
  border-radius: .5rem;
  text-align: center;
  color: #fff;
  line-height: 1;
  box-shadow: 0 8px 16px rgba(0,0,0,.5),
              0 2px 4px rgba(0,0,0,.6);
}

.badge.activa {
  background: #065f46;
  border: 1px solid rgba(255,255,255,.2);
}

.badge.inactiva {
  background: #4b5563;
  border: 1px solid rgba(255,255,255,.2);
}

/* ===== ESTADO CHIP ENTREGA ===== */
.estado-chip {
  display: inline-block;
  padding: .4rem .6rem;
  font-size: .7rem;
  font-weight: 600;
  color: #fff;
  border-radius: .6rem;
  line-height: 1;
  box-shadow:
    0 10px 20px rgba(0,0,0,.6),
    0 4px 6px rgba(0,0,0,.6),
    0 1px 2px rgba(0,0,0,.6);
  border: 1px solid rgba(255,255,255,.15);
}

.estado-chip.pendiente {
  background: #d97706; /* amarillo */
}

.estado-chip.entregado {
  background: #3b82f6; /* azul */
}

.estado-chip.revisado {
  background: #10b981; /* verde */
}

/* ===== RÃšBRICA BOX ===== */

.rubrica-badge {
  background: #065f46;
  border: 1px solid rgba(255,255,255,.2);
  color: #fff;
  font-size: .75rem;
  font-weight: 600;
  line-height: 1.2;
  border-radius: .5rem;
  padding: .5rem .75rem;
  align-self: flex-start;
  box-shadow:
    0 20px 40px rgba(0,0,0,.8),
    0 8px 16px rgba(0,0,0,.6),
    0 1px 2px rgba(0,0,0,.6);
}

.rubrica-box {
  background: rgba(15,23,42,.5);
  border: 1px solid rgba(255,255,255,.08);
  border-radius: .5rem;
  color: #fff;
  padding: .75rem 1rem;
  font-size: .75rem;
  line-height: 1.3;
  margin-top: 1rem;
  box-shadow:
    0 20px 40px rgba(0,0,0,.8),
    0 8px 16px rgba(0,0,0,.6),
    0 1px 2px rgba(0,0,0,.6);
}

.rubrica-box pre {
  margin: .5rem 0 0 0;
  font-size: .75rem;
  line-height: 1.3;
  color: #e2e8f0;
  white-space: pre-wrap;
  word-break: break-word;
}

/* ===== ESTADOS / MENSAJES ===== */

.estado-carga {
  background: rgba(15,23,42,.6);
  border: 1px solid rgba(255,255,255,.08);
  color: #eab308;
  font-size: .8rem;
  padding: .75rem 1rem;
  border-radius: .5rem;
  margin-top: .75rem;
}

.estado-error {
  background: rgba(67,20,20,.7);
  border: 1px solid rgba(220,38,38,.6);
  color: #fecaca;
  font-size: .8rem;
  padding: .75rem 1rem;
  border-radius: .5rem;
  margin-top: .75rem;
  box-shadow:
    0 20px 40px rgba(0,0,0,.8),
    0 8px 16px rgba(0,0,0,.6),
    0 1px 2px rgba(0,0,0,.6);
}

.estado-vacio {
  background: rgba(15,23,42,.6);
  border: 1px solid rgba(255,255,255,.08);
  color: #94a3b8;
  text-align: center;
  font-size: .8rem;
  font-style: italic;
  padding: 1rem;
  border-radius: .5rem;
  margin-top: .75rem;
}

/* ===== MODAL OVERLAY ===== */

.modal-backdrop {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,.7);
  backdrop-filter: blur(2px);
  z-index: 9999;

  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 4vh;
  padding-left: 1rem;
  padding-right: 1rem;
  overflow-y: auto;
}

.modal-card {
  background: #1f2537;
  color: #fff;
  width: 100%;
  max-width: 400px;
  border-radius: 1rem;
  padding: 1rem 1rem 1.25rem;
  border: 1px solid rgba(255,255,255,.08);

  box-shadow:
    0 60px 120px rgba(0,0,0,.95),
    0 30px 60px rgba(0,0,0,.8),
    0 6px 12px rgba(0,0,0,.7);

  position: relative;
}

.modal-card .modal-title {
  margin: 0 0 .75rem 0;
  font-size: 1rem;
  font-weight: 600;
  text-shadow: 0 4px 12px rgba(0,0,0,.8);
  display: flex;
  flex-wrap: wrap;
  gap: .5rem;
  line-height: 1.3;
}

.modal-card .strong {
  color: #38bdf8;
  text-shadow: 0 0 10px rgba(56,189,248,.6);
  font-weight: 600;
}

.modal-body {
  font-size: .8rem;
  line-height: 1.35;
  color: #e2e8f0;
}

.label {
  font-size: .75rem;
  font-weight: 600;
  margin-bottom: .35rem;
  margin-top: .75rem;
  color: #fff;
  text-shadow: 0 2px 4px rgba(0,0,0,.8);
  display: block;
}

.input,
.textarea {
  width: 100%;
  background: #0f172a;
  color: #fff;
  border-radius: .6rem;
  border: 1px solid rgba(255,255,255,.15);
  font-size: .8rem;
  line-height: 1.3;
  padding: .6rem .75rem;
  box-shadow:
    0 20px 40px rgba(0,0,0,.8),
    0 8px 16px rgba(0,0,0,.6),
    0 1px 2px rgba(0,0,0,.6);
}

.input:focus,
.textarea:focus {
  outline: 2px solid #6366f1;
  outline-offset: 0;
  border-color: #6366f1;
}

.check-row {
  display: flex;
  align-items: center;
  gap: .5rem;
  font-size: .8rem;
  color: #fff;
  font-weight: 500;
  margin-top: .75rem;
  text-shadow: 0 2px 4px rgba(0,0,0,.8);
}

.mini-titulo {
  font-size: .7rem;
  font-weight: 600;
  color: #fff;
  margin-top: .75rem;
  margin-bottom: .35rem;
  text-shadow: 0 2px 4px rgba(0,0,0,.8);
}

.mini-box {
  background: rgba(15,23,42,.6);
  border: 1px solid rgba(255,255,255,.08);
  border-radius: .5rem;
  color: #e2e8f0;
  padding: .6rem .75rem;
  font-size: .75rem;
  line-height: 1.3;
  word-break: break-word;
  box-shadow:
    0 20px 40px rgba(0,0,0,.8),
    0 8px 16px rgba(0,0,0,.6),
    0 1px 2px rgba(0,0,0,.6);
}

.ruta-archivo {
  display: flex;
  flex-direction: column;
  gap: .5rem;
}

.modal-footer {
  display: flex;
  flex-direction: column;
  gap: .5rem;
  margin-top: 1rem;
}
