.calificaciones-wrapper {
  padding: 1rem;
  color: #fff;
  background: radial-gradient(circle at 10% 0%, #1a1f3a 0%, #0f1017 70%);
  min-height: 100%;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Inter", Roboto,
    "Segoe UI", sans-serif;
}

/* Toolbar */
.toolbar-card {
  background: linear-gradient(135deg, rgba(30, 33, 60, 0.9) 0%, rgba(15, 15, 25, 0.9) 100%);
  border: 1px solid rgba(140, 130, 255, 0.4);
  border-radius: 0.75rem;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.8),
    0 0 50px rgba(125, 105, 255, 0.3) inset;
  padding: 1rem;
  margin-bottom: 1rem;

  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  justify-content: space-between;
  align-items: center;
}

.toolbar-card .left,
.toolbar-card .right {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
  align-items: center;
}

.label-tri {
  font-size: 0.9rem;
  color: #d6d6ff;
  font-weight: 500;
  display: flex;
  flex-direction: column;
}

.select-tri {
  background-color: #1f223f;
  border: 1px solid #6a5acd;
  border-radius: 0.5rem;
  padding: 0.4rem 0.6rem;
  color: #fff;
  min-width: 10rem;
  font-size: 0.9rem;
}

.select-tri:disabled {
  opacity: 0.5;
}

.btn-recargar,
.btn-guardar {
  border-radius: 0.5rem;
  padding: 0.5rem 0.8rem;
  font-size: 0.9rem;
  font-weight: 600;
  color: #fff;
  border: 0;
  cursor: pointer;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.8);
  line-height: 1.2;
}

.btn-recargar {
  background: radial-gradient(
    circle at 0% 0%,
    rgba(60, 68, 180, 0.9) 0%,
    rgba(20, 25, 70, 0.9) 70%
  );
  border: 1px solid rgba(120, 130, 255, 0.6);
}

.btn-recargar:disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

.btn-guardar {
  background: radial-gradient(
    circle at 0% 0%,
    rgba(0, 110, 60, 0.9) 0%,
    rgba(0, 40, 20, 0.9) 70%
  );
  border: 1px solid rgba(0, 255, 140, 0.5);
}

.btn-guardar:disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

/* Alertas */
.alert {
  border-radius: 0.5rem;
  padding: 0.75rem 1rem;
  margin-bottom: 1rem;
  font-size: 0.9rem;
  font-weight: 500;
  line-height: 1.4;
  border: 1px solid transparent;
  box-shadow: 0 16px 32px rgba(0, 0, 0, 0.75);
}

.alert.info {
  background: rgba(40, 45, 85, 0.8);
  border-color: rgba(140, 130, 255, 0.4);
  color: #d6d6ff;
}

.alert.error {
  background: rgba(90, 20, 20, 0.8);
  border-color: rgba(255, 90, 90, 0.6);
  color: #ffbdbd;
}

.alert.success {
  background: rgba(10, 70, 40, 0.8);
  border-color: rgba(0, 255, 140, 0.4);
  color: #a8ffdf;
}

/* Tarjeta alumno */
.alumno-card {
  background: linear-gradient(145deg, rgba(20, 20, 30, 0.95) 0%, rgba(15, 15, 20, 0.9) 70%);
  border-radius: 0.75rem;
  border: 1px solid rgba(180, 170, 255, 0.28);
  box-shadow: 0 28px 60px rgba(0, 0, 0, 0.9),
    0 0 60px rgba(150, 120, 255, 0.25) inset;
  padding: 1rem;
  margin-bottom: 1rem;
  color: #fff;
}

.alumno-header {
  border-bottom: 1px solid rgba(160, 140, 255, 0.3);
  padding-bottom: 0.5rem;
  margin-bottom: 0.75rem;

  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 0.75rem;
  align-items: baseline;
}

.alumno-nombre {
  font-size: 1rem;
  font-weight: 600;
  color: #fff;
}

.alumno-promedio {
  font-size: 0.9rem;
  color: #d2d2ff;
  font-weight: 500;

  .promedio-num {
    display: inline-block;
    min-width: 2.5rem;
    text-align: center;
    background: rgba(0, 150, 80, 0.2);
    border: 1px solid rgba(0, 255, 140, 0.5);
    color: #9effd9;
    border-radius: 0.5rem;
    font-weight: 600;
    padding: 0.2rem 0.4rem;
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.8);
  }
}

/* Tabla de tareas */
.alumno-body {
  overflow-x: auto;
}

.tabla-tareas {
  width: 100%;
  border-collapse: collapse;
  min-width: 400px;
  font-size: 0.85rem;
  color: #e9e9ff;
}

.tabla-tareas thead th {
  text-align: left;
  font-weight: 600;
  color: #caccff;
  background: rgba(30, 30, 60, 0.6);
  border-bottom: 1px solid rgba(160, 140, 255, 0.3);
  padding: 0.5rem 0.75rem;
  white-space: nowrap;
}

.tabla-tareas tbody td {
  padding: 0.6rem 0.75rem;
  border-bottom: 1px solid rgba(100, 100, 140, 0.2);
  vertical-align: middle;
}

.tarea-nombre {
  font-weight: 500;
  color: #fff;
}

.tarea-calif .badge-nota {
  background: rgba(80, 30, 120, 0.6);
  border: 1px solid rgba(200, 160, 255, 0.6);
  color: #fff;
  min-width: 2rem;
  display: inline-block;
  text-align: center;
  border-radius: 0.5rem;
  padding: 0.25rem 0.5rem;
  font-weight: 600;
  font-size: 0.8rem;
  box-shadow: 0 10px 24px rgba(0, 0, 0, 0.8);
}

.input-porcentaje {
  width: 5rem;
  background-color: rgba(20, 20, 40, 0.9);
  border: 1px solid rgba(140, 130, 255, 0.6);
  border-radius: 0.5rem;
  color: #fff;
  padding: 0.4rem 0.5rem;
  font-size: 0.8rem;
  box-shadow: 0 10px 24px rgba(0, 0, 0, 0.9);
}

.input-porcentaje:disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

.nota-ayuda {
  margin-top: 0.75rem;
  font-size: 0.7rem;
  color: #8d8dbb;
  line-height: 1.4;
  font-style: italic;
}
